LXI H, 8050H
MVI A, 0AH
LOOP: PUSH PSW

MOV A, M
ANI 01H
MOV A, M
JZ EVEN

ODD: ADD C
JNC ESCAPE
INR B

EVEN: ADD E
JNC ESCAPE
INR D

ESCAPE: POP PSW
INX H
DCR A
JNZ LOOP

MOV A, C
STA 8060H
OUT 00H

MOV A, B
STA 8061H
OUT 01H

CALL DELAY:

MOV A, E
STA 8070H
OUT 00H

MOV A, D
STA 8071H
OUT 01H
HLT

DELAY: MVI D, 06
L3: MVI B, 231
L2: MVI C, 230
L1: DCR C
JNZ L1
DCR B
JNZ L2
DCR D
JNZ L3
RET