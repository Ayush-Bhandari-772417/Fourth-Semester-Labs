LXI H, 8050H
MVI B, 0AH
LOOP: MOV C, L

MOV A, M
ANI 01H
MOV A, M
JZ EVEN

ODD: MVI L, 60H
JMP COMMON

EVEN: MVI L, 70H

COMMON: ADD M
MOV M, A
JNC ESCAPE
INR L
INR M

ESCAPE: MOV L, C
INX H
DCR B
JNZ LOOP

LDA 8060H
OUT 00H

LDA 8061H
OUT 01H

CALL DELAY

LDA 8070H
OUT 00H

LDA 8071H
OUT 01H
HLT

DELAY: MVI D, 06
L3: MVI B, 231
L2: MVI C, 230
L1: DCR C
JNZ L1
DCR B
JNZ L2
DCR D
JNZ L3
RET