MVI A, 00
LXI B, 0000
MVI D, 00

SEC: PUSH PSW
PUSH B
PUSH D
CALL delay.3
POP D
POP B
POP PSW
INR D
MOV A, D
CPI 3CH
CZ MIN
MOV D, A
OUT 0AH
JMP SEC


MIN: MVI A, 00H
OUT 0AH
MOV D, A
INR C
MOV A, C
CPI 3CH
CZ HR
MOV C, A
OUT 0BH
JMP SEC


HR: MVI A, 00
OUT 0BH
MOV C, A
INR B
MOV A, B
CPI 18H
CZ SET
MOV B, A
OUT 0CH
JMP SEC

SET: MVI A, 00
MOV B, A
OUT 0CH
JMP SEC


delay. 3: MVI B, 255
MVI C, 255
DCR C
JNZ 8054H
DCR B
JNZ 8052H
RET